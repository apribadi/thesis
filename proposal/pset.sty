% problem and solution environments
\newenvironment{problem}[1][]{
    \begin{trivlist}
    \item[\hskip\labelsep \textbf{#1}]
    \begin{it}
    \thispagestyle{plain}
    \extramarks{\hfill #1 (continued)}{}
}{
    \end{it}
    \hfill\ensuremath{\lrcorner}
    \end{trivlist}
}
\newenvironment{solution}{
    \begin{trivlist}
    \item[]
}{
    \hfill\ensuremath{\Box}
    \end{trivlist}
    % \vspace{\baselineskip}
    \pagebreak
}


