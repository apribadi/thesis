\ProvidesPackage{math}

% AMS packages
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{amsthm}

% Extra packages
\usepackage{mathtools}                    % includes shortintertext and more!
\usepackage[retainorgcmds]{IEEEtrantools} % nicer equation align
\usepackage{tikz}                         % commutative diagrams
\usetikzlibrary{matrix,arrows}
\usepackage{extarrows}                    % long arrows

% amsthm
\theoremstyle{plain}
\newtheorem{ucounter}{} % counter for everything

\newtheorem{theorem}[ucounter]{Theorem}
\newtheorem{proposition}[ucounter]{Proposition}
\newtheorem{corollary}[ucounter]{Corollary}
\newtheorem{lemma}[ucounter]{Lemma}

\theoremstyle{definition}
\newtheorem{definition}[ucounter]{Definition}
\newtheorem{example}[ucounter]{Example}
\newtheorem{note}[ucounter]{Note}


